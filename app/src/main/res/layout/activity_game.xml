                android:text="Х"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="6dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"

            android:layout_weight="1">
            <TextView
                android:id="@+id/option4"
                android:text="Л"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="6dp"
            android:layout_width="0dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black"
            android:layout_margin="2dp"
            android:layout_height="match_parent"

            android:layout_weight="1">
            <TextView
                android:id="@+id/option5"
                android:text="E"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="6dp"
            android:layout_width="0dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black"
            android:layout_margin="2dp"
            android:layout_height="match_parent"

            android:layout_weight="1">
            <TextView
                android:id="@+id/option6"
                android:text="Р"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DC000000"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/baraban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ray"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="@id/liner_33"
        app:layout_constraintBottom_toBottomOf="@id/liner_33"
        app:layout_constraintStart_toStartOf="@id/liner_33"
        app:layout_constraintEnd_toEndOf="@id/liner_33"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/liner_33"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="8"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/constraint1"
        app:layout_constraintBottom_toTopOf="@id/liner_2"
        app:layout_constraintEnd_toEndOf="@id/constraint1"
        app:layout_constraintStart_toStartOf="@id/constraint1">







            <TextView
                android:layout_weight="1"
                android:background="@drawable/shape_option_bg"
                android:id="@+id/answer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold" />







        <TextView
            android:layout_weight="1"
            android:background="@drawable/shape_option_bg"
            android:id="@+id/answer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/shape_option_bg"
            android:id="@+id/answer3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/shape_option_bg"
            android:id="@+id/answer4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/shape_option_bg"
            android:id="@+id/answer5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/shape_option_bg"
            android:id="@+id/answer6"
